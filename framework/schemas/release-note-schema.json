{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Release Note Schema",
  "description": "Schema for tracking agent release notes and changes",
  "type": "object",
  "properties": {
    "agent": {
      "type": "string",
      "description": "Name of the agent"
    },
    "version": {
      "type": "string",
      "description": "Version number or identifier"
    },
    "releaseDate": {
      "type": "string",
      "format": "date",
      "description": "Release date"
    },
    "sourceUrl": {
      "type": "string",
      "format": "uri",
      "description": "URL to release notes"
    },
    "changes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["feature", "enhancement", "bugfix", "deprecation", "breaking-change", "security"],
            "description": "Type of change"
          },
          "category": {
            "type": "string",
            "description": "Capability category affected"
          },
          "description": {
            "type": "string",
            "description": "Description of the change"
          },
          "impact": {
            "type": "string",
            "enum": ["major", "minor", "patch"],
            "description": "Impact level"
          }
        },
        "required": ["type", "description"]
      }
    },
    "capabilitiesAdded": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "New capabilities introduced"
    },
    "capabilitiesModified": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Capabilities that were modified"
    },
    "capabilitiesRemoved": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Capabilities that were removed or deprecated"
    }
  },
  "required": ["agent", "version", "releaseDate", "changes"]
}
